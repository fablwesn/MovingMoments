<!-- Drawer header only displays an image -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/gradient_nav_header"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/default_space_large"
    android:paddingLeft="@dimen/default_space_large"
    android:paddingRight="@dimen/default_space_large"
    android:paddingTop="@dimen/default_space_large"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@id/nav_header_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/cd_home_drawer_header"
        android:paddingTop="@dimen/default_space_large"
        app:srcCompat="@drawable/ic_nav_tmdb" />

</LinearLayout>
