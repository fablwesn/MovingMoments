<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/item_review_parent_rellay"
    android:layout_width="match_parent"
    android:padding="@dimen/default_space_medium"
    android:layout_height="@dimen/details_recycler_reviews_height">

    <!-- Author -->
    <TextView
        android:id="@id/item_review_author_txt"
        style="@style/DetailsReviewAuthorText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_space_small"
        android:layout_marginStart="@dimen/default_space_small"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        tools:text="Author" />

    <!-- Review -->
    <TextView
        android:id="@id/item_review_content_txt"
        style="@style/DetailsReviewDefaultText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/item_review_author_txt"
        android:layout_marginLeft="@dimen/default_space_small"
        android:layout_marginStart="@dimen/default_space_small"
        android:ellipsize="end"
        android:maxLines="3"
        tools:text="Content" />

    <!-- Click info -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/default_space_small"
        android:alpha=".5"
        android:gravity="center"
        android:text="@string/review_click_to_open"
        android:textAllCaps="true"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />
</RelativeLayout>